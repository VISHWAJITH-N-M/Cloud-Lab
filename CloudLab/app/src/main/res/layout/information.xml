            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/handshake"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvjoin"
            app:layout_constraintTop_toTopOf="@+id/join">

        </ImageView>

        <TextView
            android:id="@+id/tvjoin2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:fontFamily="@font/nb"
            android:padding="5dp"
            android:text="Join Cloud Lab"
            android:textColor="#2C3E50"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/tvjoin"
            app:layout_constraintEnd_toEndOf="@+id/tvjoin"
            app:layout_constraintStart_toStartOf="@+id/tvjoin"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/tvjoin"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/bg3"
            android:fontFamily="@font/nr"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="10dp"
            android:text="We challenge you to join us in creating healthy work environments by making these standards the norm. Explore about cloud computing, Learn to share."
            android:textColor="#2C3E50"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/join"
            app:layout_constraintStart_toStartOf="@+id/join"
            app:layout_constraintTop_toTopOf="@+id/join"
            app:layout_constraintVertical_bias="0.5">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/c1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg3"
        app:layout_constraintVertical_bias="0.021">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="210dp"
            android:layout_height="180dp"
            android:src="@drawable/infooter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/nb"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="Rameshraja K"
            android:textColor="#000000"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toTopOf="@+id/textView2"
            app:layout_constraintVertical_bias="0.0">

