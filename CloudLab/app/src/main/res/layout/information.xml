<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iv_i"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:scrollbars="none"
    android:layout_height="match_parent"
    tools:context=".Information"
    android:forceDarkAllowed="false">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/f_info"
        android:drawablePadding="5dp"
        android:fontFamily="@font/nb"
        android:text="App Info"
        android:textColor="#0099ff"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

    </TextView>

    <ImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/infoheader"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

    </ImageView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bg1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv3">

        <ImageView
            android:id="@+id/claim"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </ImageView>

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/rewards"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvclaim"
            app:layout_constraintTop_toTopOf="@+id/claim">

        </ImageView>

        <TextView
            android:id="@+id/tvclaim2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:fontFamily="@font/nb"
            android:padding="5dp"
            android:text="Claim Reward Points"
            android:textColor="#2C3E50"
            android:textSize="18dp"
            app:layout_constraintBottom_toTopOf="@+id/tvclaim"
            app:layout_constraintEnd_toEndOf="@+id/tvclaim"
            app:layout_constraintStart_toStartOf="@+id/tvclaim"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/tvclaim"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="@drawable/bg1"
            android:fontFamily="@font/nr"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="Get reward points for all Events, done under CLOUD LAB. Submit all required details. Details will be VERIFIED and then the reward points are awarded."
            android:textColor="#2C3E50"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/claim"
            app:layout_constraintStart_toStartOf="@+id/claim"
            app:layout_constraintTop_toTopOf="@+id/claim"
            app:layout_constraintVertical_bias="0.5">

        </TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/bg1">

        <ImageView
            android:id="@+id/ivonduty"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        </ImageView>

        <ImageView
            android:id="@+id/iv2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/sign"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tvonduty"
            app:layout_constraintStart_toStartOf="@+id/ivonduty"
            app:layout_constraintTop_toTopOf="@+id/ivonduty">

        </ImageView>

        <TextView
            android:id="@+id/verified"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:fontFamily="@font/nb"
            android:padding="5dp"
            android:text="Verified On-Duty"
            android:textColor="#2C3E50"
            android:textSize="15dp"
            app:layout_constraintBottom_toTopOf="@+id/tvonduty"
            app:layout_constraintEnd_toEndOf="@+id/tvonduty"
            app:layout_constraintStart_toStartOf="@+id/tvonduty"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/tvonduty"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg2"
            android:fontFamily="@font/nr"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:text="Working in a lab during academic hours requires On-duty. On-duty approval is done after submitting the proof. Students are bored with writing letters. Just enter and submit all details, a document will be created-> verified-> digitally signed by our In-charge->mailed to your Mentor"
            android:textColor="#2C3E50"
            android:textSize="13dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivonduty"
            app:layout_constraintEnd_toEndOf="@+id/ivonduty"
            app:layout_constraintTop_toTopOf="@+id/ivonduty"
            app:layout_constraintVertical_bias="0.5">

        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bg3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/bg2">

        <ImageView
            android:id="@+id/join"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"

