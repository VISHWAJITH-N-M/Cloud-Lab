<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/iv_i"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:scrollbars="none"
    android:layout_height="match_parent"
    tools:context=".Information"
    android:forceDarkAllowed="false">


    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height = "wrap_content"
        android:layout_width = "match_parent">

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawablePadding="5dp"
            android:fontFamily="@font/nb"
            android:text="Who we are?"
            android:textColor="#0099ff"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header">

        </TextView>

        <ImageView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/cloudlab1"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp">

        </ImageView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/tv3">

            <ImageView
                android:id="@+id/claim"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

            </ImageView>

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:src="@drawable/mission"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tvclaim"
                app:layout_constraintTop_toTopOf="@+id/claim">

            </ImageView>

            <TextView
                android:id="@+id/tvclaim2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:fontFamily="@font/nb"
                android:padding="5dp"
                android:text="Our Vision"
                android:textColor="#2C3E50"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/tvclaim"
                app:layout_constraintEnd_toEndOf="@+id/tvclaim"
                app:layout_constraintStart_toStartOf="@+id/tvclaim"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/tvclaim"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:background="@drawable/bg2"
                android:fontFamily="@font/nr"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="The key objective of the CLOUD Lab is to develop fundamental, next-generation cloud and Storage technologies that support a true utility-driven service-oriented computing"                android:textColor="#2C3E50"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/claim"
                app:layout_constraintStart_toStartOf="@+id/claim"
                app:layout_constraintTop_toTopOf="@+id/claim"
                app:layout_constraintVertical_bias="0.5">

            </TextView>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/bg1">

            <ImageView
                android:id="@+id/ivonduty"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">

            </ImageView>

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="140dp"
                android:layout_height="130dp"
                android:layout_marginStart="6dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/vision"
                app:layout_constraintBottom_toBottomOf="@+id/ivonduty"
                app:layout_constraintEnd_toEndOf="@+id/ivonduty"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ivonduty"
                app:layout_constraintTop_toTopOf="@+id/ivonduty"
                app:layout_constraintVertical_bias="1.0">

            </ImageView>

            <TextView
                android:id="@+id/verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg"
                android:fontFamily="@font/nb"
                android:padding="5dp"
                android:text="Our Mission"
                android:textColor="#2C3E50"
                android:textSize="18dp"
                app:layout_constraintBottom_toTopOf="@+id/tv2"
                app:layout_constraintEnd_toEndOf="@+id/tv2"
                app:layout_constraintStart_toStartOf="@+id/tv2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

            </TextView>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg4"
                android:fontFamily="@font/nr"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="Develop indigenous cloud solutions to stay ahead in the field of information technology."
                android:textColor="#2C3E50"
                android:textSize="13dp"
                app:layout_constraintEnd_toEndOf="@+id/ivonduty"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/iv2"
                app:layout_constraintTop_toTopOf="@+id/ivonduty">

            </TextView>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg4"
                android:fontFamily="@font/nr"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="Deliver training to students and faculties to improve their IT solution development skills"
                android:textColor="#2C3E50"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivonduty"
                app:layout_constraintEnd_toEndOf="@+id/tv2"
                app:layout_constraintStart_toStartOf="@+id/tv2"
                app:layout_constraintTop_toBottomOf="@+id/tv2"
                app:layout_constraintVertical_bias="0.0">

            </TextView>

            <TextView
                android:id="@+id/tv5"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg4"
                android:fontFamily="@font/nr"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="5dp"
                android:paddingBottom="5dp"
                android:text="Secure consultancy services by reaching out to the public"
                android:textColor="#2C3E50"
                android:textSize="13dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv2"
                app:layout_constraintStart_toStartOf="@+id/tv2"
                app:layout_constraintTop_toBottomOf="@+id/tv4"
                app:layout_constraintVertical_bias="0.0">

            </TextView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/gf"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/yt"
            app:layout_constraintVertical_bias="1.0">

        </ImageView>

        <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
            android:id="@+id/yt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="5dp"
            app:autoPlay="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bg2"
            app:showYouTubeButton="true"
            app:videoId="DE9QA8SEwPE"
           app:layout_constraintCircleRadius="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
